<div class="App_mainContent_12BYb">
    <div class="App_card_38zmH">
        <div class="App_cardTop_3hHIG">
            <%= image_tag ("nike"), "class": "App_cardTopLogo_2ho9K"%>
        </div>
        <div class="App_cardTitle_29nyq">Our Products</div>
        <div class="App_cardBody_1tfYc">
            <div>
                <% @products.each do |product| %>
                    <div class="App_shopItem_3FgVU">
                        <div class="App_shopItemImage_341iU" style="background-color: <%="#" + product.color %>;"><%= image_tag (product.image_url)%></div>
                        <div class="App_shopItemName_1_FJR"><%= product.name%></div>
                        <div class="App_shopItemDescription_1EIVK"><%= product.description%></div>
                        <div class="App_shopItemBottom_3401_">
                            <div class="App_shopItemPrice_2SLiG"><%= "$"+product.price.to_s%></div>
                            
                            <div id="add_card_div_<%=product.id%>" class="App_shopItemButton_23FO1" onclick="add_cart(<%=product.id%>)">
                                ADD TO CART
                            </div>

                            <div id="checked_div_<%=product.id%>" class="App_inactive_19f0W App_shopItemButton_23FO1">
                                <div class="App_shopItemButtonCover_1bH2R">
                                    <div class="App_shopItemButtonCoverCheckIcon_18IzJ">
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                <% end %>
            </div>
        </div>
    </div>

    <div class="App_card_38zmH">
        <div class="App_cardTop_3hHIG">
        <%= image_tag ("nike"), "class": "App_cardTopLogo_2ho9K"%>
        </div>
        <div class="App_cardTitle_29nyq">
            Your cart
            <span id="total" class="App_cardTitleAmount_17QFR">$0.00</span>
        </div>


        <div class="App_cardBody_1tfYc">
            <% @products.each do |product| %>
            <div id="cart_item_<%=product.id%>" class="App_cartItem_lfA9I" style="display: none">
                <div class="App_cartItemLeft_1HqDk cartItemLeft">
                    <div class="App_cartItemImage_1rLvq cartItemImage" style="background-color: <%="#" + product.color %>;">
                        <div class="App_cartItemImageBlock_wRE4E">
                            <%= image_tag (product.image_url)%>
                        </div>
                    </div>
                </div>
                <div class="App_cartItemRight_2LNcC cartItemRight">
                    <div class="App_cartItemName_3he6M cartItemName"><%= product.name%></div>
                    <div class="App_cartItemPrice_R0sr2 cartItemPrice">
                                <span>$</span>
                                <span id="item_price_<%=product.id%>"><%= product.price%></span>
                    </div>
                    <div class="App_cartItemActions_13kia cartItemActions">
                        <div class="App_cartItemCount_1GCCN cartItemCount">
                            <div class="App_cartItemCountButton_Gr8VG" onclick="decrease(<%=product.id%>)">-</div>
                            <div id="item_count_<%=product.id%>" class="App_cartItemCountNumber_1Evq9">0</div>
                            <div class="App_cartItemCountButton_Gr8VG" onclick="increase(<%=product.id%>)">+</div>
                        </div>
                        <div class="App_cartItemRemove_1GiLR cartItemRemove" onclick="remove(<%=product.id%>)">
                            <img src="data:image/png;base64,"></div>
                        </div>
                        </div>
                    </div>
            <% end %>
        </div>
    </div>
</div>



